{
  "name" : "Subtitles",
  "version" : "1.0.1",
  "description" : "Shows an infobar on pages which contain the word 'sandwich'",
  "background" : {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "permissions" : [  "activeTab" ],
  "icons" : {
    "16" : "sandwich-16.png",
    "48" : "sandwich-48.png",
    "128" : "sandwich-128.png"
  },
  "content_scripts" : [
    {
      "matches" : [ "http://*/*" ],
      "js" : [  "js/jquery.js", "js/contentscript.js" ],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
   "web_accessible_resources": [
    "js/injected.js" ,"js/injectedVk.js","js/swfobject.js, player.swf"
  ],
  "browser_action" : {
			"default_title" : "Hello Word",
			"default_icon" : "sandwich-16.png" // Путь до иконки которая будет отображаться рядом со строкой Адреса
			//"default_popup" : "popup.html" // Путь для контента, который будет отображаться при "Клике" по Иконке
		},
  "manifest_version": 2
}
